<!DOCTYPE aspectj PUBLIC "-//AspectJ//DTD//EN" "http://www.eclipse.org/aspectj/dtd/aspectj.dtd">
<aspectj>

    <weaver options="-verbose -showWeaveInfo">
    </weaver>

    <aspects>
        <concrete-aspect name="com.jahnelgroup.flogger.Log4j2BindParamAspectImpl" extends="com.jahnelgroup.flogger.spi.BindParamAspectImpl">
            <pointcut name="anyMethodWithBindParams" expression="execution(* *(.., @com.jahnelgroup.flogger.BindParam (*), ..))"/>
        </concrete-aspect>
    </aspects>

</aspectj>
